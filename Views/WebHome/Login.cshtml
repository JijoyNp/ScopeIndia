@model ScopeIndia.Models.LoginViewModel

<div >
    <div class="text-center mt-5">
        <div class="container bg-success h-50 w-50  pb-3">
            <form asp-controller="WebHome" asp-action="Login" method="post">
                <fieldset>
                    <legend>Login</legend>
                    <div class="viewbagWarnings">
                        @if (ViewBag.EmailVerification != null)
                        {
                            <h6>@ViewBag.EmailVerification</h6>
                        }
                        @if (ViewBag.PasswordSuccess != null)
                        {
                            <h6>@ViewBag.EmailVerification</h6>
                        }
                        @if (ViewBag.LoginError != null)
                        {
                            <h6>@ViewBag.LoginError</h6>
                        }
                    </div>
                    <div>
                        <input asp-for="Email" class="form-control"/>
                        <label asp-for="Email" class="form-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <input asp-for="Password" type="password" class="form-control"/>
                        <label asp-for="Password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div style="padding-left:100px;">
                        <div class="text-start">
                            <span>New User?<a href="/Webhome/FirstTimeLogin">click here</a></span><br />
                            <span>Forgot Password?<a href="/Webhome/FirstTimeLogin">click here</a></span><br />
                            <input type="checkbox" asp-for="RememberMe" /><strong> Remember Me</strong>
                        </div>
                    </div>
                    <br/><br/>

                    <button type="submit">Log In</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
}
