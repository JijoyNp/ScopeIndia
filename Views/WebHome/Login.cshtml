@model ScopeIndia.Models.LoginViewModel
<div class="viewbagWarnings">
    @if (ViewBag.EmailVerification != null)
    {
        <div id="viewbagAlert" class="alert alert-success text-center">
            @ViewBag.EmailVerification
            <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Close" onclick="closeViewBagMessage()"></button>
        </div>
    }
    @if (ViewBag.PasswordSuccess != null)
    {
        <div id="viewbagAlert" class="alert alert-success text-center">
            @ViewBag.PasswordSuccess
            <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Close" onclick="closeViewBagMessage()"></button>
        </div>
    }

    @if (ViewBag.LoginError != null)
    {
        <div id="viewbagAlert" class="alert alert-success text-center">
            @ViewBag.LoginError
            <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Close" onclick="closeViewBagMessage()"></button>
        </div>
    }
</div>
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 12px;">
        <h3 class="text-center mb-4" style="color:#005bb5">Login</h3>
        <form asp-controller="WebHome" asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" value="true" />
                <label class="form-check-label" asp-for="RememberMe"> Remember Me</label>
            </div>
            <div class="text-center">
                <button type="submit" class="btn text-white w-100" style="background-color:#005bb5">Log In</button>
            </div>
            <div class="text-start mt-3">
                <p class="mb-1">New User? <a href="/Webhome/FirstTimeLogin" style="color:#005bb5">Click here</a></p>
                <p>Forgot Password? <a href="/.Webhome/ForgotPassword" style="color:#005bb5">Click here</a></p>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
}
