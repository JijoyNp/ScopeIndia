@model ScopeIndia.Models.NewUserModel

<div>
    <div class="text-center mt-5">
        <div class="container bg-success h-50 w-50 pb-3">
            <form asp-controller="WebHome" asp-action="PasswordCreation" method="post">
                @Html.AntiForgeryToken()

                <fieldset>
                    <legend>Password Creation</legend>

                    <div>
                        <input asp-for="Email" type="hidden" value="@ViewBag.Email" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    @if (ViewBag.PasswordError != null)
                    {
                        <div class="alert alert-danger">@ViewBag.PasswordError</div>
                    }

                    <button type="submit" class="btn btn-primary">Set Password</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
