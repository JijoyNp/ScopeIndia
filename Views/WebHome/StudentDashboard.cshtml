@model List<CourseModel>
<div>

    @{
        var imgPath = "/uploads/" + ViewBag.Avatar;
    }
    @if (!string.IsNullOrEmpty(ViewBag.UserName))
    {
        <div style="float:right; margin-top:10px; margin-bottom:10px; display:flex;">
            <div><img src="@imgPath" alt="User Avatar" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;"></div>
            <div class="ps-2"><span class="ms-2 text-white">Hi,<br />@ViewBag.UserName</span></div>
        </div>
    }
</div>

<h2 class="text-warning text-center pt-4">Dashboard</h2>

<table class="table table-bordered text-light">
    <thead>
        <tr>
            <th hidden>Course ID</th>
            <th>Course Name</th>
            <th>Duration</th>
            <th>Fee</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td hidden>@course.CourseId</td>
                <td>@course.CourseName</td>
                <td>@course.CourseDuration</td>
                <td>@course.CourseFee</td>
                <td class="text-center"><button>Join</button></td>
            </tr>
        }
    </tbody>
</table>
